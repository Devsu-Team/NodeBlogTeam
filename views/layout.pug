doctype html
html
  head
    title GEEK BlOG 2.0
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-inverse.bg-dark(style="background-color: #220044;")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') GEEK BlOG 2.0
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Inicio
            
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/articles/add') Crear Articulo
            if user
              li 
                a(href='/users/logout') Cerrar Sesion
            else
              li
                a(href='/users/register') Registrar
              li
                a(href='/users/login') Iniciar Sesion
    main.container
      
      
      
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="alert alert-danger") #{error.msg}
        block content
    br
    br
    hr

    footer(style="position: absolute; right: 0;  bottom: 0;  left: 0;  padding: 0rem;  text-align: center;")
        nav.navbar.fixed-bottom.navbar-expand-sm.navbar-dark(style="background-color:#999999;")   
